{
  "name": "test-banner",
  "version": "1.0.0",
  "description": "A test task with banner",
  "author": "Test",
  "license": "ISC",
  "keywords": [
    "test",
    "banner"
  ],
  "homepage": "https://github.com/FedosieievaKV/test-banner#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FedosieievaKV/test-banner.git"
  },
  "devDependencies": {
    "autoprefixer": "^9.8.6",
    "browser-sync": "^2.26.7",
    "browserlist": "^1.0.1",
    "node-sass": "^8.0.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.0.2",
    "postcss-cli": "^7.1.1",
    "rimraf": "^3.0.2",
    "stylelint": "^13.3.3",
    "stylelint-config-recommended-scss": "^4.2.0",
    "stylelint-order": "^4.0.0",
    "stylelint-scss": "^3.17.2"
  },
  "scripts": {
    "build": "run-p build:scss clean",
    "build:scss": "run-s scss optimizecss",
    "clean": "rimraf dist/",
    "lint:scss": "./node_modules/.bin/stylelint 'src/scss/**/*.scss' --syntax scss || true",
    "optimizecss": "postcss dist/css/style.css -c postcss.config.js -o dist/css/style.min.css --use autoprefixer",
    "scss": "node-sass src/scss/style.scss -o dist/css --source-map-root \"file://${PWD}/\" --source-map-embed true",
    "serve": "browser-sync start --server --files='./*.html,./*.css'",
    "watch": "run-p serve watch:css",
    "watch:css": "onchange 'src/scss' -- run-p lint:scss build:scss"
  }
}